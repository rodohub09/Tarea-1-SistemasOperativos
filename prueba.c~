#define MAX_INPUT 1024
#define MAX_ARGS 128

int main(){
  char input[MAX_INPUt];
  char *args[MAX_ARGS];
  pid_t pid;

  while(1){
    printf("Shell/> $ ");   // Prompt
    fflush(stdout);        // Vacia el buffer de salida


    //Elimina el salto de linea en el input
